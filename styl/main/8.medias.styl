@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.general-list
		max-width 1000px
@media screen and (max-width 767px)
	header
		margin-bottom: 30px
	#logo
		float: none
		margin: 0 auto 5px
	.contacts
		float: none
		text-align: center
	.contact
		display inline-block
		margin 5px 5px 0
	#main
	#plan
	#prices
		background-attachment: scroll
	#main
		padding-bottom:  40px
	#for
	#plan
	#get
	#prices
	#record
		padding 40px 0
	#vk
		margin-bottom: 25px
@media screen and (max-width 485px)
	header
		margin-bottom: 15px
	#logo
		width 160px
		height 14px
	.contact
		.fa
			font-size: 14px
			margin: 0 3px 0 5px
			&+span
				font-size: 12px
	.main-title
		font-size: 42px
		margin 20px 0 30px
	.main-info
		font-size: 20px
		margin-bottom: 20px
		span
			font-size: 24px
		&:last-of-type
			margin-bottom: 40px
	.general-title
		font-size: 26px
		margin-bottom: 25px
	.general-list li
		font-size: 18px
		margin-bottom: 15px
	.plan-text
		padding 7px 10px
		margin-bottom: 15px
		line-height: 1.4
	#price-container
		padding 30px 20px
	.price
		font-size: 22px
		margin-bottom: 20px
		span
			font-size: 26px
	.timer-title
		margin 20px 0 10px
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.general-title-feedback
		margin-top: 30px
	footer
		padding: 15px 0
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
	footer #conditions, footer p
		font-size: 12px
@media screen and (max-width 385px)
	#main
		padding-bottom:  30px
	#for
	#plan
	#get
	#prices
	#record
		padding 30px 0
	header
		margin-bottom: 10px
	.main-title
		font-size: 32px
	.main-info span
		display inline
	.main-info:last-of-type
		margin-bottom: 30px
	.general-title
		font-size: 24px
		margin-bottom: 20px
	.general-list
		padding-left: 0