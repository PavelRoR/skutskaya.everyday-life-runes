#prices
	padding 60px 0
	background-color: #C08856
	background-image url(../img/prices_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	background-attachment fixed
	&:before
		@extends #main:before
	.container
		position relative
		z-index 11
#price-container
	padding 40px 20px
	background-color rgba(246,245,245,.95)
	box-shadow: 0 0 12px 5px  rgba(0,0,0,.05)
	width 100%
	max-width 560px
	margin 0 auto
	text-align: center
	border-radius: 5px
.price
	font-size: 24px
	margin-bottom: 20px
	span
		display block
		font-family: RBB
		font-size: 32px
.price-full
	span
		text-decoration: line-through
.price-sale
	color red
.price-today
	color green
.timer-title
	color red
	font-family: RBB
	font-size: 24px
	margin: 40px 0 30px
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 0
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #000
.flip-clock-wrapper ul li a div div.inn
	color: #ffa500
	background-color: #000
	text-shadow: 2px 2px 2px rgba(#022a37,.6);